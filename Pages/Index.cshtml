@page
@model IndexModel
@{
    ViewData["Title"] = "Galeria de Produtos";
}

<div class="container my-5">
    <h1 class="text-center mb-5 display-4 fw-bold text-gradient">Galeria de Produtos</h1>

    <!-- Filter and Sort Section -->
    <div class="card shadow-sm mb-5 border-0 bg-light">
        <div class="card-body p-4">
            <form method="get" class="row g-3 align-items-center justify-content-center">
                <div class="col-md-6">
                    <label for="search" class="form-label visually-hidden">Buscar</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">üîç</span>
                        <input type="text" id="search" name="SearchTerm" class="form-control border-start-0" placeholder="Buscar produtos..." value="@Model.SearchTerm">
                    </div>
                </div>
                <div class="col-md-4">
                     <label for="sort" class="form-label visually-hidden">Ordenar</label>
                    <select id="sort" name="SortOrder" class="form-select" onchange="this.form.submit()">
                        <option value="">Ordenar por Padr√£o</option>
                        <option value="price_asc" selected="@(Model.SortOrder == "price_asc")">Pre√ßo: Menor para Maior</option>
                        <option value="price_desc" selected="@(Model.SortOrder == "price_desc")">Pre√ßo: Maior para Menor</option>
                    </select>
                </div>
                <div class="col-md-2 d-grid gap-2">
                     <button type="submit" class="btn btn-primary">Aplicar</button>
                </div>
                @if(!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.SortOrder))
                {
                    <div class="col-12 text-center mt-2">
                         <a href="/" class="text-decoration-none text-muted small">Limpar Filtros</a>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Product Grid -->
    @if(Model.Products.Count == 0)
    {
        <div class="text-center py-5">
            <h3 class="text-muted">Nenhum produto encontrado com os crit√©rios selecionados.</h3>
            <a href="/" class="btn btn-outline-primary mt-3">Ver Todos os Produtos</a>
        </div>
    }
    else
    {
        <div class="product-grid">
            @foreach (var product in Model.Products)
            {
                <article class="product-card" 
                         style="cursor: pointer;" 
                         data-bs-toggle="modal" 
                         data-bs-target="#productModal"
                         data-name="@product.Name"
                         data-price="@product.Price.ToString("C")"
                         data-image="@product.ImageUrl"
                         data-description="@product.Description">
                    <div class="product-image-wrapper">
                        <img src="@product.ImageUrl" alt="@product.Name" class="product-image" loading="lazy">
                        <div class="product-overlay">
                            <button class="btn btn-light btn-sm rounded-pill px-3">Ver Detalhes</button>
                        </div>
                    </div>
                    <div class="product-info">
                        <h2 class="product-name">@product.Name</h2>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="product-price">@product.Price.ToString("C")</span>
                        </div>
                    </div>
                </article>
            }
        </div>
    }
</div>

<!-- Product Detail Modal -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title fw-bold" id="productModalLabel">Detalhes do Produto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body text-center">
        <img id="modalImage" src="" alt="" class="img-fluid rounded mb-3" style="max-height: 300px; object-fit: contain;">
        <h3 id="modalName" class="fw-bold mb-2"></h3>
        <p id="modalPrice" class="text-primary fs-4 fw-bold mb-3"></p>
        <p id="modalDescription" class="text-muted"></p>
      </div>
      <div class="modal-footer border-0 justify-content-center pb-4">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        var productModal = document.getElementById('productModal')
        productModal.addEventListener('show.bs.modal', function (event) {
            // Button that triggered the modal
            var button = event.relatedTarget
            
            // Extract info from data-* attributes
            var name = button.getAttribute('data-name')
            var price = button.getAttribute('data-price')
            var image = button.getAttribute('data-image')
            var description = button.getAttribute('data-description')

            // Update the modal's content.
            var modalTitle = productModal.querySelector('.modal-title')
            var modalName = productModal.querySelector('#modalName')
            var modalPrice = productModal.querySelector('#modalPrice')
            var modalImage = productModal.querySelector('#modalImage')
            var modalDescription = productModal.querySelector('#modalDescription')

            modalTitle.textContent = name
            modalName.textContent = name
            modalPrice.textContent = price
            modalImage.src = image
            modalImage.alt = name
            modalDescription.textContent = description
        })
    </script>
}
